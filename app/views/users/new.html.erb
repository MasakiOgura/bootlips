<div class="sectionh2 form">
<h2><span>SignUp</span></h2>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_url do |f| -%>
  <table>
    <tbody>
      <tr>
        <th><%= label_tag 'ログイン名' %></th>
        <td><%= f.text_field :login %></td>
      </tr>
      <tr>
        <th><%= label_tag 'メールアドレス' %></th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th><%= label_tag 'パスワード' %></th>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <th><%= label_tag 'password_confirmation', '確認' %></th>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
      <tr>
        <th><%= label_tag '権限' %></th>
        <td><%= f.select :user_authority, User::AUTHORITY_TYPE, :prompt => "権限を選択してください" %></td>
      </tr>

    </tbody>
  </table>
  <p><%= submit_tag 'サインアップ' %></p>
<% end -%>
</div>